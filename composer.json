{
    "name": "amitmerchant/array-utils",
    "description": "Simple wrapper implementation of common PHP array methods",
    "keywords": [
        "amitmerchant",
        "test-package"
    ],
    "homepage": "https://github.com/amitmerchant1990/array-utils",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Amit Merchant",
            "email": "bullredeyes@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Amitmerchant\\ArrayUtils\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amitmerchant\\ArrayUtils\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
